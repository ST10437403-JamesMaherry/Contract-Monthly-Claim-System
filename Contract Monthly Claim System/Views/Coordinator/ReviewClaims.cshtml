@model List<Contract_Monthly_Claim_System.Models.Claim>
@{
    var allDocuments = ViewBag.Documents as List<Contract_Monthly_Claim_System.Models.Document> ?? new List<Contract_Monthly_Claim_System.Models.Document>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4>Review Claims - Programme Coordinator</h4>
    <span class="badge bg-warning">@Model.Count Pending Claims</span>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <h5 class="text-muted">No pending claims to review</h5>
            <p class="text-muted">All claims have been processed</p>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        You have <strong>@Model.Count claim(s)</strong> pending review. Please verify hours and supporting documents before approving.
    </div>

    <div class="row g-4">
        @foreach (var claim in Model)
        {
            var user = (ViewBag.Users as List<Contract_Monthly_Claim_System.Models.User>)?.FirstOrDefault(u => u.userId == claim.userId);
            var claimDocuments = allDocuments.Where(d => d.claimId == claim.claimId).ToList();

            <div class="col-12">
                <div class="card card-pending">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h5 class="card-title">Claim #@claim.claimId</h5>
                                <p class="text-muted small">
                                    Lecturer: @(user?.firstName + " " + user?.lastName ?? "Unknown") |
                                    Submitted: @claim.submissionDate.ToString("dd MMM yyyy")
                                </p>

                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <strong>Hours Worked:</strong> @claim.hoursWorked
                                    </div>
                                    <div class="col-md-4">
                                        <strong>Hourly Rate:</strong> R @claim.hourlyRate
                                    </div>
                                    <div class="col-md-4">
                                        <strong>Total Amount:</strong> R @claim.totalAmount
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(claim.Notes))
                                {
                                    <div class="mb-3">
                                        <strong>Lecturer Notes:</strong>
                                        <p class="mb-0 text-muted">@claim.Notes</p>
                                    </div>
                                }

                                @if (claimDocuments.Any())
                                {
                                    <div class="mb-3">
                                        <strong>Supporting Documents:</strong>
                                        <div class="mt-2">
                                            @foreach (var doc in claimDocuments)
                                            {
                                                <div class="d-flex justify-content-between align-items-center mb-2 p-2 bg-light rounded">
                                                    <span>@doc.fileName</span>
                                                    <a href="@Url.Action("DownloadDocument", "Coordinator", new { documentId = doc.documentId })"
                                                       class="btn btn-sm btn-outline-primary">Download</a>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning">
                                        No supporting documents uploaded for this claim.
                                    </div>
                                }

                                <form method="post" action="@Url.Action("ApproveClaim", "Coordinator")" class="mt-3">
                                    <input type="hidden" name="claimId" value="@claim.claimId" />
                                    <div class="mb-3">
                                        <label class="form-label">Coordinator Comments</label>
                                        <textarea name="comments" class="form-control" rows="2" placeholder="Enter approval comments..."></textarea>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-success">✅ Approve</button>
                                        <button type="submit" formaction="@Url.Action("RejectClaim", "Coordinator")" class="btn btn-danger">❌ Reject</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}