@model List<Contract_Monthly_Claim_System.Models.User>

@{
    ViewData["Title"] = "HR Dashboard";
    var totalClaims = ViewBag.TotalClaims ?? 0;
    var approvedClaims = ViewBag.ApprovedClaims ?? 0;
    var pendingClaims = ViewBag.PendingClaims ?? 0;
    var totalUsers = Model?.Count ?? 0;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="btn-group" role="group" aria-label="HR View Toggle">
        <button type="button" class="btn btn-outline-primary active" data-view="users">👥 Manage Users</button>
        <button type="button" class="btn btn-outline-success" data-view="reports">📊 Generate Reports</button>
    </div>
</div>

<!-- Manage Users Section -->
<div id="usersSection" class="hr-section">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h5>User Management</h5>
        <a href="@Url.Action("AddUser", "HR")" class="btn btn-primary">➕ Add New User</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h6 class="card-title mb-3">Filter Users by Role</h6>
                    <div class="btn-group" role="group" id="roleFilter">
                        <button type="button" class="btn btn-outline-secondary active" data-role="all">
                            All Users (@Model.Count)
                        </button>
                        <button type="button" class="btn btn-outline-primary" data-role="Lecturer">
                            Lecturers (@Model.Count(u => u.userRole == "Lecturer"))
                        </button>
                        <button type="button" class="btn btn-outline-success" data-role="Coordinator">
                            Coordinators (@Model.Count(u => u.userRole == "Coordinator"))
                        </button>
                        <button type="button" class="btn btn-outline-info" data-role="Manager">
                            Managers (@Model.Count(u => u.userRole == "Manager"))
                        </button>
                        <button type="button" class="btn btn-outline-danger" data-role="HR">
                            HR (@Model.Count(u => u.userRole == "HR"))
                        </button>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <div class="input-group" style="max-width: 300px; margin-left: auto;">
                        <input type="text" class="form-control" placeholder="Search users..." id="searchInput">
                        <button class="btn btn-outline-secondary" type="button" id="clearSearch">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-4">
                    <h5 class="text-muted">No users found</h5>
                    <p class="text-muted">Get started by adding your first user</p>
                    <a href="@Url.Action("AddUser", "HR")" class="btn btn-primary">Add First User</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="usersTable">
                        <thead>
                            <tr>
                                <th>User ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Role</th>
                                <th>Hourly Rate</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr data-role="@user.userRole" data-search="@(user.firstName + " " + user.lastName + " " + user.email + " " + user.phoneNumber)">
                                    <td>@user.userId</td>
                                    <td>@user.firstName @user.lastName</td>
                                    <td>@user.email</td>
                                    <td>@user.phoneNumber</td>
                                    <td>
                                        <span class="badge @(user.userRole == "HR" ? "bg-danger" : user.userRole == "Manager" ? "bg-info" : user.userRole == "Coordinator" ? "bg-success" : "bg-primary")">
                                            @user.userRole
                                        </span>
                                    </td>
                                    <td>R @user.hourlyRate</td>
                                    <td>
                                        <a href="@Url.Action("EditUser", "HR", new { id = user.userId })" class="btn btn-sm btn-outline-primary">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div id="noResults" class="text-center py-4" style="display: none;">
                    <h5 class="text-muted">No users match your filters</h5>
                    <button class="btn btn-outline-secondary" id="resetFiltersFromEmpty">Reset Filters</button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Generate Reports Section -->
<div id="reportsSection" class="hr-section" style="display: none;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h5>Generate Reports</h5>
        <small class="text-muted">
            <i class="fas fa-sync-alt me-1"></i>
            Last updated: @DateTime.Now.ToString("dd MMM yyyy HH:mm")
        </small>
    </div>

    <!-- Stats Summary -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card card-action text-center">
                <div class="card-body">
                    <h5 class="mb-0">@totalClaims</h5>
                    <small class="text-muted">Total Claims</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-approved text-center">
                <div class="card-body">
                    <h5 class="mb-0">@approvedClaims</h5>
                    <small class="text-muted">Approved Claims</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-pending text-center">
                <div class="card-body">
                    <h5 class="mb-0">@pendingClaims</h5>
                    <small class="text-muted">Pending Claims</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-action text-center">
                <div class="card-body">
                    <h5 class="mb-0">@totalUsers</h5>
                    <small class="text-muted">System Users</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Payment Report -->
    <div class="card mb-4">
        <div class="card-header">
            <h6 class="mb-0"><i class="fas fa-file-invoice-dollar me-2"></i>Payment Processing Report</h6>
        </div>
        <div class="card-body">
            <p class="text-muted mb-3">Comprehensive report of all approved claims ready for payment.</p>
            <a href="@Url.Action("DownloadPaymentReportPdf", "HR")" class="btn btn-success">
                <i class="fas fa-download me-2"></i>Download PDF
            </a>
        </div>
    </div>

    <!-- User Reports -->
    <div class="card">
        <div class="card-header">
            <h6 class="mb-0"><i class="fas fa-users me-2"></i>User Directory Reports</h6>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h6>All Users Report</h6>
                            <p class="text-muted flex-grow-1">Complete directory of all system users</p>
                            <a href="@Url.Action("DownloadUserReportPdf", "HR")" class="btn btn-outline-primary mt-auto">
                                <i class="fas fa-download me-1"></i>PDF
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <h6 class="mb-2">Role-Specific Reports</h6>
                    <p class="text-muted mb-3">Generate reports for specific user roles</p>
                    <div class="row g-2">
                        <div class="col-6">
                            <a href="@Url.Action("DownloadUserReportPdf", "HR", new { role = "Lecturer" })" class="btn btn-warning w-100">
                                <i class="fas fa-chalkboard-teacher me-1"></i>Lecturers
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Url.Action("DownloadUserReportPdf", "HR", new { role = "Coordinator" })" class="btn btn-success w-100">
                                <i class="fas fa-user-check me-1"></i>Coordinators
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Url.Action("DownloadUserReportPdf", "HR", new { role = "Manager" })" class="btn btn-info w-100">
                                <i class="fas fa-user-tie me-1"></i>Managers
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Url.Action("DownloadUserReportPdf", "HR", new { role = "HR" })" class="btn btn-danger w-100">
                                <i class="fas fa-user-cog me-1"></i>HR
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggleButtons = document.querySelectorAll('[data-view]');
            const usersSection = document.getElementById('usersSection');
            const reportsSection = document.getElementById('reportsSection');

            // Toggle view
            toggleButtons.forEach(btn => {
                btn.addEventListener('click', () => {
                    // Update active button
                    toggleButtons.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');

                    // Show/hide sections
                    if (btn.dataset.view === 'users') {
                        usersSection.style.display = '';
                        reportsSection.style.display = 'none';
                    } else {
                        usersSection.style.display = 'none';
                        reportsSection.style.display = '';
                    }
                });
            });

            // Keep existing user filtering logic
            if (document.getElementById('usersTable')) {
                const roleFilter = document.getElementById('roleFilter');
                const searchInput = document.getElementById('searchInput');
                const clearSearch = document.getElementById('clearSearch');
                const resetFiltersFromEmpty = document.getElementById('resetFiltersFromEmpty');
                const usersTable = document.getElementById('usersTable');
                const noResults = document.getElementById('noResults');

                let currentRole = 'all';
                let currentSearch = '';

                function filterUsers() {
                    const rows = usersTable.querySelectorAll('tbody tr');
                    let visible = 0;
                    rows.forEach(row => {
                        const roleMatch = currentRole === 'all' || row.dataset.role === currentRole;
                        const searchMatch = !currentSearch || row.dataset.search.toLowerCase().includes(currentSearch);
                        if (roleMatch && searchMatch) {
                            row.style.display = '';
                            visible++;
                        } else {
                            row.style.display = 'none';
                        }
                    });
                    noResults.style.display = visible === 0 ? 'block' : 'none';
                    usersTable.style.display = visible === 0 ? 'none' : '';
                }

                if (roleFilter) {
                    roleFilter.addEventListener('click', e => {
                        if (e.target.tagName === 'BUTTON' && e.target.dataset.role) {
                            roleFilter.querySelectorAll('button').forEach(b => b.classList.remove('active'));
                            e.target.classList.add('active');
                            currentRole = e.target.dataset.role;
                            filterUsers();
                        }
                    });
                }

                if (searchInput) {
                    searchInput.addEventListener('input', () => {
                        currentSearch = searchInput.value.toLowerCase().trim();
                        filterUsers();
                    });
                }

                if (clearSearch) {
                    clearSearch.addEventListener('click', () => {
                        searchInput.value = '';
                        currentSearch = '';
                        filterUsers();
                    });
                }

                if (resetFiltersFromEmpty) {
                    resetFiltersFromEmpty.addEventListener('click', () => {
                        if (roleFilter) {
                            roleFilter.querySelectorAll('button').forEach(b => b.classList.remove('active'));
                            roleFilter.querySelector('[data-role="all"]').classList.add('active');
                        }
                        if (searchInput) searchInput.value = '';
                        currentRole = 'all';
                        currentSearch = '';
                        filterUsers();
                    });
                }

                filterUsers();
            }
        });
    </script>
}
